# Database connection URL (PostgreSQL)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require

# Admin credentials (for initial seeding / admin setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your_password_hash_here

# Session secret for express-session
SESSION_SECRET=your_session_secret_here

# Node environment (“development” | “production”)
NODE_ENV=production

# CORS / client origin URL
CORS_ORIGIN=https://your-frontend-domain.com

# Optional: Prisma client engine type (if you override default)
PRISMA_CLIENT_ENGINE_TYPE=your_engine_type_here
